<Page x:Class="Diplom.Pages.Navigation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Diplom.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1700"
      Title="Navigation">
    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="12*"/>
        </Grid.ColumnDefinitions>
        <Frame x:Name="NavigatedFrame" Grid.Column="1"/>
        <StackPanel Grid.RowSpan="2" Background="WhiteSmoke" VerticalAlignment="Stretch"  HorizontalAlignment="Stretch">
            <Button x:Name="BtnProfile" >
                Профиль
            </Button>
            <Button x:Name="BtnFavorites" >
                Любимые места
            </Button>
            <Button x:Name="BtnSearch" >
                Поиск
            </Button>
            <Button x:Name="BtnSightseeing" >
                Эккскурсии
            </Button>
            <Button x:Name="BtnCalendar" >
                Календарь
            </Button>
            <Button x:Name="BtnSettings" >
                Настройки
            </Button>
        </StackPanel>
    </Grid>
</Page>
