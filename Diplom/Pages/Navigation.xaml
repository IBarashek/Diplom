<Page x:Class="Diplom.Pages.Navigation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Diplom.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Navigation">
    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Background" Value="LightGray"/>
        </Style>
    </Page.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <Frame x:Name="NavigatedFrame" Grid.Column="1"/>
        <StackPanel Grid.RowSpan="2" Background="WhiteSmoke"  >
            <Button x:Name="BtnProfile" >
                <Image/>
            </Button>
            <Button x:Name="BtnFavorites" >
                <Image/>
            </Button>
            <Button x:Name="BtnSearch" >
                <Image/>
            </Button>
            <Button x:Name="BtnSightseeing" >
                <Image/>
            </Button>
            <Button x:Name="BtnCalendar" >
                <Image/>
            </Button>
            <Button x:Name="BtnSettings" >
                <Image/>
            </Button>
        </StackPanel>
    </Grid>
</Page>
